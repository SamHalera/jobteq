{% extends 'base.html.twig' %}

{% block title %}New Application
{% endblock %}

{% block body %}

	<div class="w-75 mx-auto my-5">
		<h1 class="text-center">Apply</h1>
		<h2 class="text-center">{{jobOffer.title}}</h2>

		<div class=" ">
			<div class="text-center">
				{% if user.thumbnail %}

					<img src="{{asset('/uploads/user/' ~ user.thumbnail)}}" width="100" height="100" class="rounded-circle" alt="">
				{% else %}
					<img src="/images/profile-default.jpg" width="100" height="100" class="rounded-circle" alt="">
				{% endif %}

				<h3 class="text-info">{{user.firstname}}
					{{user.lastname}}</h3>
				<h4>{{user.email}}</h4>
			</div>
			{{form_start(form)}}
			<div class="d-flex gap-4 align-items-end my-5">
				<a href="{{path('app_resume_pdf', {id : user.candidate.id})}}" target="_blank">
					<div class="p-4 bg-light rounded text-center shadow-sm ">
						<p>My resume</p>
						{{ ux_icon('bi:filetype-pdf', {height: 50, width: 50} )}}
					</div>
				</a>
				<div>
					<p class="text-info fst-italic">Use you candidate resume or upload a new one</p>
					{{form_row(form.resumeFile)}}
				</div>
			</div>

			<div>
				<p class="text-info fst-italic">Use your Candidate presentation or wrire a new one just for this application:</p>
				{{form_row(form.customPresentation)}}
			</div>
			{{form_row(form.motivationalMessage)}}
			{{form_end(form)}}
		</div>
	</div>
{% endblock %}
