<div class="d-flex flex-row justify-content-center items-align-center gap-3">
	<span>{{app.user.email}}</span>
	<div class="dropdown">
		<div class="d-block link-body-emphasis text-decoration-none dropdown-toggle cursor-pointer" id="dropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
			{% if app.user.thumbnail %}

				<img src="{{asset('uploads/user/'~ app.user.thumbnail)}}" width="32" height="32" class="rounded-circle object-cover" alt="">
			{% else %}

				<img src="/images/profile-default.jpg" width="32" height="32" class="rounded-circle" alt="">
			{% endif %}
			{# <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle"> #}
		</div>
		<ul class="dropdown-menu" aria-labelledby="dropdownMenu">

			<li>
				<a class="dropdown-item" href="{{path('app_user_dashboard')}}">Dashboard</a>
			</li>
			{% if is_granted('ROLE_RECRUITER') %}
				{% include "user/partials/menu/_user-recruiter-menu.html.twig" %}
			{% elseif is_granted('ROLE_SUPERADMIN') %}
				{% include "user/partials/menu/_user-superadmin-menu.html.twig" %}
			{% elseif is_granted('ROLE_MANAGER') %}
				{% include "user/partials/menu/_user-manager-menu.html.twig" %}
			{% elseif is_granted('ROLE_CANDIDATE') %}
				{% include "user/partials/menu/_user-candidate-menu.html.twig" %}
			{% endif %}

			<li>
				<a class="dropdown-item" href="#">Settings</a>
			</li>
			<li>
				<a class="dropdown-item" href="{{path('app_user_profile')}}">Profile</a>
			</li>

			<li><hr class="dropdown-divider"></li>
			<li>
				<a class="dropdown-item" href="{{path('app_logout')}}">Sign out</a>
			</li>
		</ul>
	</div>

</div>
